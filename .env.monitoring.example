# Laravel Health Monitor - Monitoring Server Configuration

APP_NAME="Health Monitor Dashboard"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://monitor.yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=health_monitor
DB_USERNAME=monitor_user
DB_PASSWORD=secure_password

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting Configuration
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

CACHE_STORE=database
QUEUE_CONNECTION=database

# Mail Configuration (for alerts)
MAIL_MAILER=smtp
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=alerts@yourdomain.com
MAIL_PASSWORD=mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=alerts@yourdomain.com
MAIL_FROM_NAME="Health Monitor Alerts"

# Monitoring Configuration
MONITORING_OFFLINE_THRESHOLD=10
MONITORING_ALERT_EMAILS=devops@yourdomain.com,admin@yourdomain.com
MONITORING_HEALTH_REPORTS_RETENTION=30
MONITORING_RESOLVED_ALERTS_RETENTION=90
MONITORING_DASHBOARD_REFRESH=30
MONITORING_ITEMS_PER_PAGE=20

# Alert Thresholds
MONITORING_QUEUE_TIMEOUT_THRESHOLD=30
MONITORING_SUPERVISOR_RESTART_THRESHOLD=3
MONITORING_BACKUP_FAILURE_THRESHOLD=2

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
